package CalcularNota;

import javax.swing.*;
import java.util.Scanner;

public class nota {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        double[] notasArray = new double[3];

        String valor1 = JOptionPane.showInputDialog("Digite a primeira nota:");
        String valor2 = JOptionPane.showInputDialog("Digite a segunda nota:");
        String valor3 = JOptionPane.showInputDialog("Digite a terceira nota");

        double valor1ToDouble = Double.parseDouble(valor1);
        double valor2ToDouble = Double.parseDouble(valor2);
        double valor3ToDouble = Double.parseDouble(valor3);

        double media = valor1ToDouble + valor2ToDouble + valor3ToDouble / 3;

        System.out.println(media);

        entrada.close();




    }
}
