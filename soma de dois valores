package aula;

import javax.swing.*;
import java.util.Scanner;

public class aula {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        String valor1 = JOptionPane.showInputDialog("Digite o valor 1");
        String valor2 = JOptionPane.showInputDialog("Digite o valor 2");

        double valor1ToDouble = Double.parseDouble(valor1);
        double valor2ToDouble = Double.parseDouble(valor2);

        double result =  valor1ToDouble + valor2ToDouble;

        System.out.println(result);

        input.close();

    }
}
